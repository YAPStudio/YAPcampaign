{
	"ignorePatterns": ["dist", "webpack.config.js"],
	"env": {
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"prefer-const": "error",
		"no-undef": "error",
		"prefer-arrow-callback": "error"
	}
}